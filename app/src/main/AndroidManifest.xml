<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.android.amrro.recipes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RecipesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".ui.main.RecipesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.recipe.RecipeDetailActivity"
            android:parentActivityName=".ui.main.RecipesListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.android.amrro.recipes.ui.main.RecipesListActivity" />
        </activity>
        <activity
            android:name=".ui.steps.StepDetailActivity"
            android:label="@string/title_step_detail"
            android:parentActivityName=".ui.recipe.RecipeDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.android.amrro.recipes.ui.recipe.RecipeDetailActivity" />
        </activity>
    </application>

</manifest>